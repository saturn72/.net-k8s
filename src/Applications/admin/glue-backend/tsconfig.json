{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "out",
    "strict": false,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}